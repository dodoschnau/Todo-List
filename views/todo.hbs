{{> message}}

<p>
  <input type="checkbox" disabled {{#if todo.isComplete}} checked {{/if}}>
  {{ todo.name }}
</p>
<a href="/todos/{{ todo.id }}/edit">Edit</a>
<a href="/todos">Back</a>
<form action="/todos/{{ todo.id }}?_method=DELETE" method="POST" style="display: inline;">
  <button type="submit">Delete</button>
</form>